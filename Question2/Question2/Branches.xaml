<Page x:Class="Question2.Branches"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Question2"
      mc:Ignorable="d" Loaded="Branchpage_loaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Branches">

    <Grid>
        
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Top" >
            <Label Content="Branches " Width="400" FontSize="26"></Label>

        </StackPanel>

        <DataGrid x:Name="BranchGrid" Margin="0,80,0,40" AutoGenerateColumns="True" >

        </DataGrid>
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Bottom">
            <Button Content="Add" Width="250" Click="Button_Click"></Button>
            <Button Content="Edit" Width="250" Margin="25,0,0,0" Click="Button_Click_1"></Button>
            <Button Content="Delete" Width="250" Margin="25,0,0,0" Click="Button_Click_2"></Button>
        </StackPanel>
    </Grid>
</Page>
